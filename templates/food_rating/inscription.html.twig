<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}FoodRating{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/minty/bootstrap.min.css">
        <script src="https://bootswatch.com/_vendor/jquery/dist/jquery.min.js"></script>
        <script src="https://bootswatch.com/_vendor/bootstrap/dist/js/bootstrap.min.js"></script>
        {% block stylesheets %}{% endblock %}
    </head>
    {% form_theme formInscription 'bootstrap_4_layout.html.twig' %}

    {% block body %}
        <div style="margin-top:10%;">
            <div class="container">
                <div class="row">
                    <div class="col-sm-5 m-auto form-group">
                        <fieldset>
                            <legend>Inscription sur FoodRating !</legend>
                            {{ form_start(formInscription) }}

                            {{ form_row(formInscription.pseudo, {'attr': {'placeholder': "Entrez votre pseudo"}}) }}
                            {{ form_row(formInscription.email, {'attr': {'placeholder': "Entrez votre email"}}) }}
                            {{ form_row(formInscription.mdp, {'attr': {'placeholder': "Entrez votre mot de passe"}}) }}
                            {{ form_row(formInscription.mdp_confirmation, {'attr': {'placeholder': "Retapez votre mot de passe"}}) }}

                            <div class="container">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <button type="submit" class="btn btn-success">
                                            S'Inscrire
                                        </button>
                                    </div>
                                    <div class="col-sm-3">
                                        <a href="/food_rating" class="btn btn-info">Retour</a>
                                    </div>
                                </div>
                            </div>
                            {{ form_end(formInscription) }}
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
</html>