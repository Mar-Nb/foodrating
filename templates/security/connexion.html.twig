<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Connexion{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/minty/bootstrap.min.css">
        <script src="https://bootswatch.com/_vendor/jquery/dist/jquery.min.js"></script>
        <script src="https://bootswatch.com/_vendor/bootstrap/dist/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
        <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
        {% block stylesheets %}
            <style>
                body {
                    background: linear-gradient(to left, #939393 -6%, #ececec 100%);
                    background-attachment : fixed ;
                    background-position : center ;
                    background-repeat: no-repeat ;
                    background-size :cover ;
                }
            </style>
        {% endblock %}
    </head>

    {% block body %}
        <script>
        $(document).ready( function() {
            /*$("#inscription").click(function() {
	            $("#formChange").load("/inscription")
            });*/
	    });
            
        function ChargerPageInscription() {
            //history.pushState({ path: this.path}, '', '/inscription');
            window.location.href = "/inscription";
        }
        </script>
        {% if app.user %}
            <script>window.location.href="{{ path('espace') }}";</script>
        {% else %}
            {% for msg in app.session.flashBag.get('success') %}
                <div class="alert alert-success alert-dismissible fade show">
                    {{ msg }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
           {# {% for msg in app.session.flashBag.get('verify_email_error') %}
                <div class="alert alert-danger">
                    {{ msg }}
                </div>
            {% endfor %}#}
            <div id="formChange">
                <div style="margin-top:10%;">
                    <div class="container">
                        <ul class="nav col-sm-5 m-auto">
                            <img src="/images/logo.png" alt="logo">
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary active" href="#">Connexion</a>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link btn btn-secondary" id="inscription" onclick="ChargerPageInscription()">Inscription</button>
                            </li>
                        </ul>
                        <div id="myTabContent" class="tab-content">
                            <div class="col-sm-5 m-auto form-group tab-pane fade active show">
                                {% if error %}
                                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                                <div class="border border-info rounded pl-3 pr-3" style="background-color: white">
                                    <form action="{{ path('login_security') }}" method="post">
                                        <legend>Connexion à l'espace personnel !</legend>
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="text" id="inputEmail" name="email" class="form-control" placeholder="Entrez votre email" value="{{ last_username }}" required/>
                                        </div>
                                        <div class="form-group">
                                            <label>Mot de passe</label>
                                            <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Entrer votre mot de passe" required/>
                                            <a href="/reset-password">Mot de passe oublié ?</a>
                                        </div>
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                        <input type="hidden" name="go_to" value="{{ path('espace') }}" />
                                        <input type="hidden" name="back_to" value="{{ path('login_security') }}" />
                                        <!--<br/>-->
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-success">Connexion <i class="fa fa-rss"></i></button>
                                            <a href="{{ path('food_rating') }}" class="btn btn-info">Retour <i class="fa fa-arrow-left"></i></a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endblock %}
</html>