<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}FoodRating{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/minty/bootstrap.min.css">
        <link rel="stylesheet" href="jquery-ui/jquery-ui.min.css"/>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="row col-lg-12">
            {% if app.user %}
                <a type="button" style="margin-right: 15px; margin-bottom: 5px; margin-top: 5px;" class="btn btn-secondary col-sm-1 ml-auto" href="/deconnexion">Déconnexion</a>
                <a type="button" style="margin-bottom: 5px; margin-top: 5px;" class="btn btn-warning col-sm-1" href="{{ path('user_show') }}">Mon compte</a>
            {% else %}
                <a type="button" style="margin-bottom: 5px; margin-top: 5px;" class="btn btn-warning col-sm-1 ml-auto" href="/connexion">Mon compte</a>
            {% endif %}
        </div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="/"><img src="/images/logo.png" alt="logo"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Accueil <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("liste_produit") }}">Liste des produits (temporaire)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">test 2</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">test 3</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="text" id="recherche" placeholder="Recherche">
                    <button class="btn btn-warning my-2 my-sm-0" type="submit">Rechercher</button>
                </form>
            </div>
        </nav>
        
        <div class="container pt-5 pb-5">
            {% block body %}{% endblock %}
        </div>
        
        <footer style="background-color: #626262;" class="page-footer">
            <div class="footer-copyright text-center py-3" style="color: white">© 2020 Copyright:
                <a href="/">FoodRating</a>
            </div>
        </footer>

        {% block javascripts %}
        <script src="https://bootswatch.com/_vendor/jquery/dist/jquery.min.js"></script>
        <script src="https://bootswatch.com/_vendor/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="jquery-ui/jquery-ui.min.js"></script>
        <script>
            $("#recherche").autocomplete({
                source: "{{ path('recherche') }}",
                minLength: 3
            })
        </script>
        
        {% endblock %}
    </body>
</html>
